{{#if reg}}
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Логин</label>
    <input type="email" class="form-control" id="reg_login" aria-describedby="emailHelp" placeholder="Введите логин">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Пароль</label>
    <input type="password" class="form-control" id="reg_password" placeholder="Введите пароль">
  </div>
  <button type="submit" class="btn btn-primary" id = "btn_reg">Зарегестрироваться</button>
</form>
{{/if}}